<h1>Wine sales for the week of <%= Date.today.beginning_of_week.to_formatted_s(:long)    %></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
        <div class="picture">
          <%= link_to image_tag(sale.picture), sale.url %>
        </div>
    <% end %>
  </tbody>
</table>

<br>

